<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{personalInfo.name}} - Resume</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica', 'Arial', sans-serif;
      font-size: 11pt;
      line-height: 1.5;
      color: #333;
      padding: 0.5in;
      max-width: 8.5in;
    }

    .header {
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      border-bottom: 2px solid {{accentColor}};
      padding-bottom: 16px;
      margin-bottom: 24px;
      position: relative;
    }

    .header-logo {
      width: 80px;
      height: 80px;
      flex-shrink: 0;
    }

    .header-center {
      flex: 1;
      text-align: center;
      padding: 0 20px;
    }

    .header-avatar {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      object-fit: cover;
      flex-shrink: 0;
    }

    .header h1 {
      font-size: 28pt;
      font-weight: 700;
      color: #111;
      margin-bottom: 4px;
    }

    .header .title {
      font-size: 13pt;
      color: #555;
      margin-bottom: 8px;
    }

    .header .contact {
      font-size: 10pt;
      color: #666;
    }

    .header .contact a {
      color: {{accentColor}};
      text-decoration: none;
    }

    .header .contact span {
      margin: 0 8px;
    }

    .section {
      margin-bottom: 20px;
    }

    .section-title {
      font-size: 14pt;
      font-weight: 700;
      color: {{accentColor}};
      text-transform: uppercase;
      letter-spacing: 1px;
      border-bottom: 1px solid #ddd;
      padding-bottom: 4px;
      margin-bottom: 12px;
    }

    .summary {
      font-size: 10.5pt;
      line-height: 1.6;
      color: #444;
      margin-bottom: 8px;
    }

    .experience-item {
      margin-bottom: 16px;
      page-break-inside: avoid;
    }

    .experience-header {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      margin-bottom: 4px;
    }

    .experience-title {
      font-size: 12pt;
      font-weight: 600;
      color: #111;
    }

    .experience-date {
      font-size: 10pt;
      color: #666;
      white-space: nowrap;
    }

    .experience-company {
      font-size: 11pt;
      color: #555;
      margin-bottom: 6px;
    }

    .experience-company strong {
      font-weight: 600;
    }

    .experience-highlights {
      list-style-type: disc;
      margin-left: 18px;
      margin-bottom: 6px;
    }

    .experience-highlights li {
      font-size: 10.5pt;
      line-height: 1.5;
      margin-bottom: 4px;
      color: #444;
    }

    .experience-technologies {
      font-size: 9.5pt;
      color: #666;
      font-style: italic;
    }

    .skills-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
    }

    .skill-category {
      page-break-inside: avoid;
    }

    .skill-category strong {
      font-size: 10.5pt;
      color: #111;
      display: block;
      margin-bottom: 4px;
    }

    .skill-category span {
      font-size: 10pt;
      color: #555;
      line-height: 1.6;
    }

    .education-item {
      margin-bottom: 12px;
      page-break-inside: avoid;
    }

    .education-header {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      margin-bottom: 2px;
    }

    .education-institution {
      font-size: 11pt;
      font-weight: 600;
      color: #111;
    }

    .education-date {
      font-size: 10pt;
      color: #666;
    }

    .education-degree {
      font-size: 10.5pt;
      color: #555;
    }

    .footer {
      position: fixed;
      bottom: 0.25in;
      left: 0;
      right: 0;
      text-align: center;
      font-size: 8pt;
      color: #222;
      padding: 0 0.5in;
    }

    .footer a {
      color: {{accentColor}};
      text-decoration: none;
    }

    .footer a:hover {
      text-decoration: underline;
    }

    @media print {
      body {
        padding: 0;
      }
    }
  </style>
</head>
<body>
  <!-- Header -->
  <div class="header">
    {{#if logoDataUrl}}
      <img src="{{logoDataUrl}}" alt="Logo" class="header-logo">
    {{else}}
      <div class="header-logo"></div>
    {{/if}}

    <div class="header-center">
      <h1>{{personalInfo.name}}</h1>
      <div class="title">{{personalInfo.title}}</div>
      <div class="contact">
        <a href="mailto:{{personalInfo.contact.email}}">{{personalInfo.contact.email}}</a>
        {{#if personalInfo.contact.location}}
          <span>•</span> {{personalInfo.contact.location}}
        {{/if}}
        {{#if personalInfo.contact.website}}
          <span>•</span> <a href="{{personalInfo.contact.website}}">{{personalInfo.contact.website}}</a>
        {{/if}}
        {{#if personalInfo.contact.linkedin}}
          <span>•</span> <a href="{{personalInfo.contact.linkedin}}">LinkedIn</a>
        {{/if}}
        {{#if personalInfo.contact.github}}
          <span>•</span> <a href="{{personalInfo.contact.github}}">GitHub</a>
        {{/if}}
      </div>
    </div>

    {{#if avatarDataUrl}}
      <img src="{{avatarDataUrl}}" alt="Avatar" class="header-avatar">
    {{else}}
      <div class="header-avatar"></div>
    {{/if}}
  </div>

  <!-- Professional Summary -->
  <div class="section">
    <div class="section-title">Professional Summary</div>
    <div class="summary">{{professionalSummary}}</div>
  </div>

  <!-- Experience -->
  <div class="section">
    <div class="section-title">Professional Experience</div>
    {{#each experience}}
      <div class="experience-item">
        <div class="experience-header">
          <div class="experience-title">{{role}}</div>
          <div class="experience-date">{{startDate}} - {{#if endDate}}{{endDate}}{{else}}Present{{/if}}</div>
        </div>
        <div class="experience-company">
          <strong>{{company}}</strong>{{#if location}} • {{location}}{{/if}}
        </div>
        <ul class="experience-highlights">
          {{#each highlights}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
        {{#if technologies}}
          <div class="experience-technologies">
            Technologies: {{#each technologies}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
          </div>
        {{/if}}
      </div>
    {{/each}}
  </div>

  <!-- Skills -->
  {{#if skills}}
    <div class="section">
      <div class="section-title">Technical Skills</div>
      <div class="skills-grid">
        {{#each skills}}
          <div class="skill-category">
            <strong>{{category}}</strong>
            <span>{{#each items}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</span>
          </div>
        {{/each}}
      </div>
    </div>
  {{/if}}

  <!-- Education -->
  {{#if education}}
    <div class="section">
      <div class="section-title">Education</div>
      {{#each education}}
        <div class="education-item">
          <div class="education-header">
            <div class="education-institution">{{institution}}</div>
            {{#if endDate}}
              <div class="education-date">{{#if startDate}}{{startDate}} - {{/if}}{{endDate}}</div>
            {{/if}}
          </div>
          <div class="education-degree">
            {{degree}}{{#if field}} in {{field}}{{/if}}
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}

  <!-- References -->
  <div class="section">
    <div class="section-title">References</div>
    <div class="summary">Available upon request</div>
  </div>

  <!-- Attribution Footer -->
  <div class="footer">
    Generated by a custom AI resume builder built by the candidate — <a href="https://joshwentworth.com/resume-builder" target="_blank">joshwentworth.com/resume-builder</a>
  </div>
</body>
</html>
