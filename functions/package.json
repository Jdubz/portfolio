{
  "name": "contact-form-function",
  "version": "1.13.3",
  "description": "GCP Cloud Function for handling portfolio contact form submissions",
  "main": "dist/index.js",
  "scripts": {
    "start": "functions-framework --target=handleContactForm --port=8080 --host=0.0.0.0",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsc && npm run copy-templates && npm run copy-package",
    "gcp-build": "tsc && npm run copy-templates && npm run copy-package",
    "copy-templates": "mkdir -p dist/templates && cp -r src/templates/*.hbs dist/templates/ && mkdir -p dist/templates/assets && cp -r src/templates/assets/* dist/templates/assets/ 2>/dev/null || true",
    "copy-package": "cp package.json dist/package.json",
    "dev": "tsc --watch & nodemon --exec 'functions-framework --target=handleContactForm --port=8080 --host=0.0.0.0'",
    "deploy": "gcloud functions deploy handleContactForm --gen2 --runtime=nodejs20 --region=us-central1 --source=. --entry-point=handleContactForm --trigger-http --allow-unauthenticated --max-instances=10 --memory=256MB --timeout=60s --set-secrets='MAILGUN_API_KEY=mailgun-api-key:latest,MAILGUN_DOMAIN=mailgun-domain:latest,FROM_EMAIL=from-email:latest,TO_EMAIL=to-email:latest,REPLY_TO_EMAIL=reply-to-email:latest'",
    "deploy:staging": "gcloud functions deploy handleContactForm-staging --gen2 --runtime=nodejs20 --region=us-central1 --source=. --entry-point=handleContactForm --trigger-http --allow-unauthenticated --max-instances=5 --memory=256MB --timeout=60s --set-secrets='MAILGUN_API_KEY=mailgun-api-key:latest,MAILGUN_DOMAIN=mailgun-domain:latest,FROM_EMAIL=from-email:latest,TO_EMAIL=to-email:latest,REPLY_TO_EMAIL=reply-to-email:latest'",
    "logs": "gcloud functions logs read handleContactForm --region=us-central1 --limit=50",
    "logs:staging": "gcloud functions logs read handleContactForm-staging --region=us-central1 --limit=50"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.11.6",
    "@google-cloud/functions-framework": "^3.4.6",
    "@google-cloud/logging": "^11.0.0",
    "@google-cloud/secret-manager": "^5.5.0",
    "@sparticuz/chromium": "^141.0.0",
    "@types/busboy": "^1.5.4",
    "busboy": "^1.6.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^8.1.0",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.4.0",
    "form-data": "^4.0.4",
    "handlebars": "^4.7.8",
    "joi": "^17.13.3",
    "mailgun.js": "^12.1.0",
    "openai": "^6.3.0",
    "puppeteer-core": "^24.24.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/handlebars": "^4.0.40",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.16.5",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "ts-jest": "^29.2.5"
  },
  "engines": {
    "node": "20"
  },
  "keywords": [
    "gcp",
    "cloud-functions",
    "contact-form",
    "email",
    "portfolio"
  ]
}
