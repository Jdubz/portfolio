{
  "private": true,
  "name": "josh-wentworth-portfolio-monorepo",
  "description": "Josh Wentworth - Multidisciplinary engineer portfolio (monorepo)",
  "version": "1.13.3",
  "author": "Josh Wentworth",
  "license": "0BSD",
  "workspaces": [
    "web",
    "functions"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=web",
    "dev:web": "npm run develop --workspace=web",
    "dev:functions": "npm run dev --workspace=functions",
    "build": "npm run build --workspace=web",
    "build:web": "npm run build --workspace=web",
    "build:functions": "npm run build --workspace=functions",
    "test": "npm run test --workspaces --if-present",
    "test:web": "npm run test --workspace=web",
    "test:functions": "npm run test --workspace=functions",
    "lint": "npm run lint --workspaces --if-present",
    "lint:web": "npm run lint --workspace=web",
    "lint:functions": "npm run lint --workspace=functions",
    "clean": "npm run clean --workspace=web && rm -rf .cache",
    "serve": "npm run serve --workspace=web",
    "optimize:images": "node scripts/optimize-images.js",
    "firebase:serve": "firebase emulators:start",
    "firebase:login": "firebase login",
    "deploy:staging": "firebase deploy --only hosting:staging",
    "deploy:production": "firebase deploy --only hosting:production",
    "deploy:functions:staging": "firebase deploy --only functions:contact-form-staging",
    "deploy:functions:production": "firebase deploy --only functions:contact-form",
    "changeset": "changeset",
    "changeset:auto": "node scripts/auto-changeset.js",
    "version": "changeset version && npm install --package-lock-only",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "firebase-tools": "^13.26.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
